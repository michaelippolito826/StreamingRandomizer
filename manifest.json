{
    "manifest_version": 3,
    "name": "Streaming Randomizer",
    "version": "1.0",
    "description": "Randomize episodes on Streaming Service",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "icons": {
      "48": "icon.png"
    },
    "host_permissions": [
      "https://www.netflix.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://www.netflix.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  